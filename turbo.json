{
  "$schema": "https://turbo.build/schema.json",
  "ui": "tui",
  "tasks": {
    "build": {
      "dependsOn": ["^build"],
      "outputs": ["dist/**", "build/**", ".next/**", ".xmcp/**"],
      "env": ["PAYSTACK_SECRET_KEY"]
    },
    "dev": {
      "cache": false,
      "persistent": true,
      "env": ["PAYSTACK_SECRET_KEY", "PORT"]
    },
    "lint": {
      "dependsOn": ["^lint"]
    },
    "clean": {
      "cache": false
    },
    "prettier": {},
    "prettier-check": {}
  }
}
